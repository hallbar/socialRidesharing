<div class="row">
    <div class="col-xs-6 col-md-offset-3">
        <h2>Trip Details</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Driver Name</th>
                    <th>Number of Riders</th>
                    <th>Cancel</th>
                </tr>
            </thead>
            <tbody> 
                {{#each trip}}
                <tr>
                    <td>{{this.fname}} {{this.lname}}</td>
                    <td>{{this.numPeople}}</td>
                    <td><a href="/cancel-confirm?id={{this.tid}}">Cancel</a></td>
                    <td></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div> 
    
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-xs-6 col-md-offset-3">
        <a class="btn btn-primary" href="/myTrips" role="button">Return to trips</a>
    </div>
</div>