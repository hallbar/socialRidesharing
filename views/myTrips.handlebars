<div class="row">
    <div class="col-md-6">
        <h2>My Trips</h2>
    </div>
    


<div class="clearfix"></div>
<br>
<div class="col-xs-12">
    {{#if trip}}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Start Zip Code</th>
                <th>End Zip Code</th>
                <th>Sun</th>
                <th>Mon</th>
                <th>Tues</th>
                <th>Wed</th>
                <th>Thurs</th>
                <th>Fri</th>
                <th>Sat</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Trip Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each trip}}
            <tr>
                <td>{{this.startZip}}</td>
                <td>{{this.endZip}}</td>
                <td>{{#if this.sun}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.mon}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.tue}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.wed}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.thur}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.fri}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{#if this.sat}}<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>{{else}}<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>{{/if}}</td>
                <td>{{this.startTime}}</td>
                <td>{{this.endTime}}</td>
                <!--<td>{{this.numPeople}}</td>-->
                <td><a href="/trip_details?id={{this.tid}}">View trip details</a></td>
                {{!--<td>cap</td>--}}
                {{!--<td>numPeople</td>--}}
            </tr>
            {{/each}}        
        </tbody>
    </table>
    {{/if}}
    
    
    <div class="col-md-6">
        <!-- picture goes here -->
        <img src="static/img/traffic.jpg" class="img-responsive img-rounded">
    </div>
    
    
    
</div>